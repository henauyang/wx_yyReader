.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  height: 50px;
  overflow: hidden;
  position: fixed;
  bottom: 0px;
  left: 0;
  z-index: 2000;
  background: #191919;
}

.setting_attr_box {
  width: 100%;
  height: 80px;
  overflow: hidden;
  position: fixed;
  bottom: 50px;
  left:0px;
  z-index: 2000;
  opacity:0.7;
  background: #3d3d3b;
  display: flex;
  flex-direction: column;
}

.top-bar-item {
  display: inline-block;
  width: 20%;
  /*color: #cbcccd;*/
  text-align: center;
}

.top-bar {
  background: #191919;
  height: 50px;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 3000;
}

.chapter-title {
  font-size: 16px;
  color: #7f7f7f
}

.chapter_attr_box {
  text-align: center;
  line-height: 30px;
  width: 100%;
  height: 30px;
  overflow: hidden;
  position: fixed;
  top: 0px;
  left: 0;
  z-index: 2000;
  background: #191919;
}

.chapter-round {
  width:16px;
  height:30px;
  display: inline-block;
  font-size:14px;
  line-height: 30px;
  text-align:center;
  color:#00C777;
  text-decoration: none;
  padding: 8px 0px;
  margin-left: 20px;
}

.chapter-arrow {
  width:16px;
  height:30px;
  line-height: 30px;
  margin-right: 5px;
}

.chapter-list {
  position: relative;
  overflow: hidden;
  background: #4F4F4F;
  display: flex;
  flex-direction: row;
}

.chapter-list-day {
  position: relative;
  overflow: hidden;
  background: #fff;
  display: flex;
  flex-direction: row;
}

.chapter-item {
  padding: 12px 0px 10px 10px;
  font-size: 14px;
  height: 30px;
  color: #8a8a8a;
  border-bottom: 1px dashed #666;
  width: 80%;
}

.chapter-item-day {
  padding: 12px 0px 10px 10px;
  font-size: 14px;
  height: 30px;
  color: #9d9d9d;
  border-bottom: 1px dashed #666;
  width: 80%;
}

.celltip2 {
  margin-top: 5px;
  color: #682326;
}

.celltip {
  margin-top: 5px;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  overflow: hidden;
  z-index: 1001;
  border-radius: 3px;
  width: 100%;
  position: fixed;
}

.draw_box_day {
  position: fixed;
  overflow: hidden;
  z-index: 1001;
  width: 100%;
  background: #fff;
  border-radius: 3px;
}

.font-tip {
  font-size: 14px;
  color: #7f7f7f
}

.font-setting {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 20px;
}

.night-color-icon {
  color: #4e4e4e;
}

.font-icon-white {
  color: white;
}

.time-icon {
  color: #C60000;
  font-size: 25px;
  margin-top: 5px;
}

.bottom-box {
  text-align: center;
  background: #191919;
  color: #C60000;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 40px;
}
