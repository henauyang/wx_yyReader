.book-info__container {
    padding: 10px;
}

.book-base__info {
    display: flex;   
}

.book-cover { 
  min-width: 120rpx;
  width: 120rpx;
  height: 180rpx;

}

.book-detail {
    display: flex;
    flex-direction: column;
    margin-left: 15px;
    overflow: hidden;
    padding: 3px 0px 0px 0px;
}

.book-title {
    font-size: 14px;
}
.author-tag {
    margin-top: 2px;
    font-size: 12px;
    color: #888
}
.time-updated {
    font-size: 12px;
    color: #888
}

.book-action {
    display: flex;
    border-bottom: 1px solid #eee;
    padding-bottom: 15px
}

.book-action button {
    flex: 1;
}

.add-to-shelf {
    -webkit-appearance: none;
    border: 1px solid #C60000;
    border-radius: 3px;
    background: none;
    margin-right: 5px;
    margin-top: 10px;
    color: #C60000;
    font-size: 16px;
}

.add-to-shelf-disable {
    -webkit-appearance: none;
    border-radius: 3px;
    background: gray;
    margin-right: 5px;
    margin-top: 10px;
    color: #fff;
    font-size: 16px;
}

.add-to-shelf:after {
    content: "";
    width: 0;
    height: 0
}

.start-reading {
    -webkit-appearance: none;
    background-color: #C60000;
    border-radius: 3px;
    color: #fff;
    font-size: 16px;
    margin-top: 10px;
    margin-left: 5px
}
.start-reading:after {
    content: "";
    width: 0;
    height: 0
}

.book-details {
    display: flex;
    padding: 10px 0;
    border-bottom: 1px solid #eee
}

.book-reader, .book-status, .book-count {
    flex: 1;
    display: flex;
    flex-direction: column
}

.info-title {
    color: #999;
    font-size: 12px;
    text-align: center;
}
.book-data {
    color: #666;
    font-size: 14px;
    text-align: center
}

.book-intro {
    padding: 20px 0;
    font-size: 12px;
    color: #444;
    line-height: 2em
}